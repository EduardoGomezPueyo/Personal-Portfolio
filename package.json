{
  "scripts": {
    "start": "wmr",
    "build": "wmr build",
    "serve": "wmr serve"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "jsxBracketSameLine": false,
    "proseWrap": "always",
    "useTabs": false
  },
  "dependencies": {
    "preact-iso": "^0.2.0"
  },
  "devDependencies": {
    "prettier": "^2.2.1",
    "wmr": "^1.0.0"
  }
}
